extends ./templates/base/_base

block prepend vars
  -var bodyClass = "home-page"
  -var title = "Instant contact forms without writing a line of code - Howdy"

block content

  //- Page header
  +page-header({
    title: "Turn your static HTML contact forms in to the real thing <span>without writing a line of code</span>"
  })
    .envelope
      .callout
        .callout__inner
          p.callout__intro Enter an account email address to start your #[strong free 2 week trial]
          .callout__form
            .input-group
              label.sr-only(for="email") Email addresss
              input.input-group__input(type="email", name="email", placeholder="you@email.com")
              button.input-group__button.button Generate my snippet

  main

    //- How it works
    section.section.section--blue-lightest
      .section__inner
        .section__intro
          h2.section__title How it works
          p.section__description What once seemed like an impossible job is now so straightforward, your Granny could do it
        .section__content

          //- Buckets
          +buckets([{
            heading: "Generate a snippet",
            image: "icon-generate.svg",
            text: "Tell us which email address to send to, and we'll create your unique code."
          },{
            heading: "Paste your snippet",
            image: "icon-paste.svg",
            text: "Copy and paste your snippet into the HTML of the page with the web form."
          },{
            heading: "Start receiving emails",
            image: "icon-done.svg",
            text: "That's it buddy. Your web form is ready to start validating &amp; delivering emails."
          }])

    //- Who's it for
    section.section
      .section__inner
        .section__intro
          h2.section__title Who's it for
          p.section__description While Howdy's for anyone who wants a web-form, we created it with a few people in mind
        .section__content

          //- Buckets
          +buckets([{
            heading: "Designers",
            image: "designers.svg",
            text: "You know a little HTML, but PHP? <em>Ain't nobody got time for that</em>"
          },{
            heading: "Marketers",
            image: "marketers.svg",
            text: "Get those landing pages live, <em>girlfriend</em>. You'll never have to wait for IT again."
          },{
            heading: "Developers",
            image: "developers.svg",
            text: "We know you <em>can</em>, but why should you? Put your feet up. We've got this."
          }])

    //- Try it out
    section.section.section--blue
      .section__inner
        .section__intro
          h2.section__title Try it out
          p.section__description Fill out the form to see what Howdy sends to your Inbox
        .section__content

          .demo
            form.demo__form
              .form-group
                label.demo__form__label(for="name") Name
                input.demo__form__input(type="text", name="name", value="Sarah Jessica Parker")

              .form-group
                label.demo__form__label(for="email") Email addresss
                input.demo__form__input(type="email", name="email", value="sazzie.parker@gmail.com")

              .form-group
                label.demo__form__label(for="subject") Subject
                input.demo__form__input(type="text", name="subject")

              .form-group
                label.demo__form__label(for="message") Message
                textarea.demo__form__input(name="message") This is a interactive demo of Howdy's ability to sensibly format your contact form messages for email. Try adjusting fields and see how the email reacts!

            .demo__email
              span.demo__email__header You have a new message
              .demo__email__body
                img.demo__email__body__thumb(src="/images/thumb.svg")
                .demo__email__body__content
                  span.demo__email__body__name Sarah Jessica Parker
                  span.demo__email__body__from #{"<no-reply@howdyform.com>"}
                  span.demo__email__body__to to hello
                  ul.demo__email__body__list
                    li.demo__email__body__list__item #[strong.demo__email__body__list__item__label name:] Sarah Jessica Parker
                    li.demo__email__body__list__item #[strong.demo__email__body__list__item__label.demo__email__body__list__item__label--link email:] sazzie.parker@gmail.com
                    li.demo__email__body__list__item #[strong.demo__email__body__list__item__label subject:] n/a
                  p.demo__email__body__message This is a interactive demo of Howdy's ability to sensibly format your contact form messages for email. Try adjusting fields and see how the email reacts!
              .demo__email__footer
                img.demo__email__footer__thumb(src="/images/thumb.svg")
                .demo__email__footer__textarea Click here to #[span.demo__email__footer__textarea__link Reply], #[span.demo__email__footer__textarea__link Reply to all], or #[span.demo__email__footer__textarea__link Forward]

    //- Pricing
    section.section.section--denim
      .section__inner
        .section__content
          .benefits
            .benefits__cost
              p.benefits__cost__text Howdy costs just #[span.benefits__cost__text__highlight $2 per month]

            ul.benefits__list
              li.benefits__list__item Use Howdy across an #[strong.benefits__list__item__highlight unlimited] number of sites
              li.benefits__list__item Use Howdy for an #[strong.benefits__list__item__highlight unlimited] number of forms
              li.benefits__list__item Use Howdy with an #[strong.benefits__list__item__highlight unlimited] number of email addresses



    //- Callout
    section.section.section--denim
      .section__inner

        .callout.callout--dark
          .callout__inner
            p.callout__intro Enter an account email address to start your #[strong free 2 week trial]
            .callout__form
              .callout__form__input-group.input-group
                label.sr-only(for="email") Email addresss
                input.callout__form__input-group__input.input-group__input(type="email", name="email", placeholder="you@email.com")
                button.callout__form__input-group__button.input-group__button.button Generate my snippet
